<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
      Permissions for Bluetooth Low Energy on Android 12 (API 31) and above.
      BLUETOOTH_SCAN: Required to scan for nearby BLE devices.
      BLUETOOTH_CONNECT: Required to connect to paired BLE devices.
      NOTE: Removed neverForLocation flag - we need location services for BLE scanning
    -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!--
      Legacy permissions for Bluetooth on Android 11 (API 30) and below.
    -->
    <uses-permission android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />
    
    <!--
      Location permission required for BLE scanning on ALL Android versions.
      On Android 12+, BLE scanning still requires location services to be enabled.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!--
      Notification permission for Android 13 (API 33) and above.
      Required to show notifications.
    -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!--
      Alarm permissions for scheduling exact alarms.
      SCHEDULE_EXACT_ALARM: For exact-time medication reminders (Android 12+)
      USE_EXACT_ALARM: Alternative for critical alarms (Android 14+)
    -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!--
      app uses Bluetooth Low Energy. This allows the Google Play Store
      to filter and show the app only to devices that support BLE.
    -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pillbox" >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Pillbox">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- BroadcastReceiver for medication alarm triggers -->
        <receiver
            android:name=".alarm.MedicationAlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>
    </application>

</manifest>

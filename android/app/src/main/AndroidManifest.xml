<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
      Permissions for Bluetooth Low Energy on Android 12 (API 31) and above.
      BLUETOOTH_SCAN: Required to scan for nearby BLE devices.
      BLUETOOTH_CONNECT: Required to connect to paired BLE devices.
    -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!--
      Legacy permissions for Bluetooth on Android 11 (API 30) and below.
      The maxSdkVersion="30" ensures these are only requested on older versions.
    -->
    <uses-permission android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30"/>

    <!--
      Declare that the app uses Bluetooth Low Energy. This allows the Google Play Store
      to filter and show the app only to devices that support BLE.
    -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pillbox" >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Pillbox">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
